<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/approve_bg">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/select_picture"/>

        <th.or.dga.royaljitarsa.customview.SukhumvitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/approve_post_record"/>

        <th.or.dga.royaljitarsa.customview.SukhumvitTextView
            android:id="@+id/btnAccept"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="@string/register_btn_send"
            android:background="@drawable/radius_white_corner_no_background"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>